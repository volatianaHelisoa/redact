<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="shortcut icon" type="image/x-icon" href="" />
    <title>Mediaclick</title>

    @*<title>@ViewBag.Title</title>*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)


</head>
<body>
    <header id="header">
        <div class="fullPanel top-panel clear">
            <div class="left">
                @*<img src="~/images/home.jpg" style="width:41px;height:41px;" class="ltlavatar">*@
                <img style="width:41px;height:41px;" src="@Session["logoUrl"]" class="ltlavatar">
                <span id="pAneltxt">Redact application</span>
            </div>
            <div class="right">
                <div class="user_wlcm">
                    Welcome, <span>@Session["name"] @Session["surname"] </span>
                    <span class="badge">@Session["commande"] </span>
                    <div class="attrib">
                        @if (@Session["role"] != null && @Session["role"].ToString() == "1")
                        {
                            <p>(Référenceur)</p>
                        }
                        @if (@Session["role"] != null && @Session["role"].ToString() == "2")
                        {
                            <p>(Rédacteur)</p>
                        }
                        @if (@Session["role"] != null && @Session["role"].ToString() == "3")
                        {
                            <p>(User manager)</p>
                        }
                        @if (@Session["role"] != null && @Session["role"].ToString() == "4")
                        {
                            <p>(Administrateur)</p>

                        }

                    </div>
                    <span class="noti glyphicon glyphicon-globe"><span class="count">&nbsp;</span></span>
                    <div class="noti-content">
                        <div class="noti-top-arrow"></div>

                        <ul id="notiContent"></ul>
                    </div>
                    <a href="javascript:void(0)" onclick="@(" window.location.href='" + @Url.Action("LogoutPage", "Login") + "' ");"><i class="fa fa-user-circle-o"></i>Logout</a>
                </div>

            </div>
        </div>
    </header>
    <div id="cachepage"><span><img src="~/images/spinner.gif" /></span></div>
    <main class="wrapperpages">
        <div class="body-content">

            @RenderBody()
            <footer></footer>

        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @RenderSection("AddToHead", required: false)
        <script src="~/Scripts/GestionVue.js"></script>

            <!--Script references. -->
            <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
            <!--Reference the SignalR library. -->
            <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
            <!--Reference the autogenerated SignalR hub script. -->
            <script src="/signalr/Hubs"></script>
            <!--SignalR script to update the chat page and send messages.-->
            <script src="~/Scripts/codescriptnotification.js"></script>
       
        


    </main>

</body>

</html>
