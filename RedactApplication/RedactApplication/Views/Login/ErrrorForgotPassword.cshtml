@{
    ViewBag.Title = "Password error";
}
<div class="popupDivis errormdp">
    <div class="icone_type">
        <img src="~/images/icon-error.png" alt="Photo error">
    </div>
    <div class="pop_content">
        <h3>OUPS !</h3>
        <span class="ltl-consign">
            <p>Invalid password.</p>
            @foreach (var val in @ViewBag.ErrorPassWord)
            {
                <p style="text-align:left;">@val</p>
            }
        </span>
        <ul class="bouttons_area">
            <li><button type="submit" class="blue_hit" onclick="@("window.location.href='" + @Url.RouteUrl("Home", new { controller = "Login", action = "UpdatePassword", token = @ViewBag.userId }) + "'");">Ok</button></li>
        </ul>
    </div>

</div>