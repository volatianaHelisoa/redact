@{
    ViewBag.Title = "Deleted All User Confirmation";
    Layout = "~/Views/Shared/LayoutFullPage.cshtml";
}

<main class="wrapperpages">
    <div class="page pagesUser clear">
        <section class="column2 rightDivision fullWidth">
            <div class="rowpad">
                <div id="divisionContent">
                    <!-- end top panel -->
                    <div class="popupModal">
                        <div class="icone_type">
                            <img src="~/images/icon-warning.png" alt="Photo warning">
                        </div>
                        <div class="pop_content">
                            <h3>Warning !</h3>
                            <span class="ltl-consign"><i class="fa fa-info-circle"></i>Do you really want to delete the selection ?</span>
                            <ul class="bouttons_area">
                                <li><button type="submit" class="green_hit" onclick="@("window.location.href='" + @Url.Action("DeleteAllUserSelected", "Home") + "' ");">Delete</button></li>
                                <li><button class="blue_hit" onclick="@("window.location.href='" + @Url.RouteUrl("Home", new {controller = "Home", action = "ListeUser" }) + "' ");">No</button></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>