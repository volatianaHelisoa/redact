
@model RedactApplication.Models.UTILISATEURViewModel
@{
    ViewBag.Title = "CreateUserConfirmation";
    if (Model != null)
    {

        ViewBag.userId = Model.userId;
    }
}
<div class="popupModal">
    <div class="icone_type">
        <img src="~/images/icon-done.png" alt="Photo done">
    </div>
    <div class="pop_content">
        <h3>Done !</h3>
        <span class="ltl-consign"><i class="fa fa-info-circle"></i>The user has been sucessfully created !</span>
        <ul class="bouttons_area">
            <li><button type="submit" class="green_hit" onclick="@("window.location.href='" + @Url.RouteUrl("Home", new { controller = "Home", action = "ListeUser" }) + "'");">Ok</button></li>
            <li><button type="submit" class="blue_hit" onclick="@("window.location.href='" + @Url.RouteUrl("Home", new { controller = "Home", action = "GotoCreateUser" }) + "'");">Create user</button></li>
        </ul>
    </div>
</div>